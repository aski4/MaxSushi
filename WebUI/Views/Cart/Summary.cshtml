@model Domain.Enities.Cart

<div class="navbar-right2 hidden-xs">
    @Html.ActionLink("Checkout", "Index", "Cart",
    new { returnUrl = Request.Url.PathAndQuery }, 
    new { @class = "btn btn-success navbar-btn" })
</div>

<div class="navbar-right2 visible-xs">
    <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery}) class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span> 
    </a> 
</div>

<div class="navbar-text navbar-right2">
    <b class="hidden-xs">Корзина:</b>
    @Model.Lines.Sum(x => x.Quantity) Товар(а),
    @Model.ComputeTotalValue().ToString("# грн")
</div> 